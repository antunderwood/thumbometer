if @result == "success" then  page.replace_html 'steps_to_go', "You have just #{@total_steps - @thumbometer.current_step} days without thumb-sucking to get the prize";  page.visual_effect :highlight, 'steps_to_go', :duration => 2;  if @direction == "down" then    page << "$.sound.play('../sounds/uh_oh.mp3',{timeout: 5000});";    page << "$('div#t' + $('#current_step').val() + ' > div').remove();";    page << "$('#current_step').val(parseInt($('#current_step').val())-1);";  elsif @direction == "up" then    page << "$.sound.play('../sounds/woo_hoo.mp3',{timeout: 5000});";    page << "draw_thumbometer_div(parseInt($('#total_steps').val()), parseInt($('#current_step').val()));";    page << "$('#current_step').val(parseInt($('#current_step').val())+1);";  endelse  page.alert 'You have already recorded a thumbs up or thumbs down for today';end